{
  "obstacle_detection": {
    "robot": {
      "camera_height": 0.3,
      "max_detection_range": 5.0
    },
    "camera": {
      "focal_length_x": 350.0,
      "focal_length_y": 350.0,
      "principal_point_x": 320.0,
      "principal_point_y": 240.0,
      "width": 640,
      "height": 480
    },
    "sfm_parameters": {
      "max_corners": 150,
      "quality_level": 0.005,
      "min_distance": 15,
      "block_size": 5,
      "harris_k": 0.04,
      "min_track_frames": 2,
      "max_optical_flow_error": 100.0,
      "min_displacement_threshold": 0.1
    },
    "detection_parameters": {
      "max_distance": 7.0,
      "min_distance": 0.1,
      "min_frames_tracked": 2,
      "max_optical_flow_error": 150.0,
      "min_points_threshold": 70,
      "displacement_threshold": 0.08,
      "publish_close_obstacles_only": true
    }
  },
  "external_topics": {
    "velocity_topic": "smartmower/sensors/fusion/velocity"
  },
  "logging": {
    "enabled": true,
    "level": "debug",
    "show_windows": true,
    "file": "/opt/smartmower/log/vision_obstacle.log",
    "data_dir": "/opt/smartmower/data/vision/obstacle"
  }
}
